<div class="d-flex justify-content-between align-items-center my-4 p-2 bg-light shadow-sm rounded">
<h1 class="ms-3 text-primary fw-bold">Wikinimous</h1>
<%= link_to "New Article", new_article_path, class: "me-3 btn btn-primary shadow-sm" %>
</div>

<div class="container my-5">
  <div class="card shadow-lg border-0">
    <div class="card-body p-4">
      <h2 class="card-title text-primary fw-bold mb-3"><%= @article.title %></h2>
      <p class="card-text text-secondary fs-5"><%= @article.content %></p>

      <div class="mt-4 d-flex justify-content-start gap-3">
        <%= link_to "Edit", edit_article_path, class: "btn btn-outline-primary" %>
        <%= link_to "Delete", article_path(@article),
                    class: "btn btn-outline-danger",
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Back to articles", articles_path, class: "btn btn-link text-decoration-none" %>
  </div>
</div>
