<div class="container my-5">
  <div class="card shadow-lg border-0">
    <div class="card-body p-4">
      <h2 class="card-title text-primary fw-bold mb-3"><%= @article.title %></h2>
      <p class="card-text text-secondary fs-5"><%= @article.content %></p>

      <div class="mt-4 d-flex justify-content-start gap-3">
        <%= link_to "Edit", edit_article_path, class: "btn btn-outline-primary" %>
        <%= link_to "Delete", article_path(@article),
                    class: "btn btn-outline-danger",
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Back to articles", articles_path, class: "btn btn-link text-decoration-none" %>
  </div>
</div>
