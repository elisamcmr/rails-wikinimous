<%= form_with model: @article, class: "p-4 shadow-sm border-0 mt-4" do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label fw-bold" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter article title" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, class: "form-label fw-bold" %>
    <%= f.text_area :content, class: "form-control", placeholder: "Enter article content", rows: 5 %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit "Submit", class: "btn btn-primary mt-2" %>
  </div>
<% end %>
