<div class="d-flex justify-content-between align-items-center my-4 p-2 bg-light shadow-sm rounded">
<h1 class="ms-3 text-primary fw-bold">Wikinimous</h1>
<%= link_to "New Article", new_article_path, class: "me-3 btn btn-primary shadow-sm" %>
</div>


<div class="container mt-5">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm border-1">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-dark">
              <%= link_to article.title, article_path(article), class: "text-decoration-none text-primary" %>
            </h5>
            <p class="card-text text-secondary mb-4">
              <%= truncate(article.content, length: 150) %> <!-- Shorten content display -->
            </p>
            <div class="mt-auto d-flex justify-content-end">
              <%= link_to "Read More", article_path(article), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
